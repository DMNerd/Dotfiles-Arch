exec --no-startup-id udiskie

# Touchpad (tap to click, natural scrolling) - xinput list to get your device and then xinput list-props 'device' to find the property
exec xinput set-prop 'ELAN1300:00 04F3:3059 Touchpad' 'libinput Tapping Enabled' 1
exec xinput set-prop 'ELAN1300:00 04F3:3059 Touchpad' 'libinput Natural Scrolling Enabled' 1

