# Terminal
bindsym $mod+Return exec i3-sensible-terminal

# Rofi
bindsym $mod+d exec rofi --no-startup-id -show drun  -terminal terminator
bindsym $mod+shift+d exec --no-startup-id rofi -lines 10 -padding 0 -show search -modi search:~/.config/rofi/rofi-web-search.py -i -p "Search: "

# Keyboard
exec setxkbmap -layout us,cz -option 'grp:alt_shift_toggle'
exec_always xkbset -sl
exec_always xkbset -a

# Xbacklight
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 1 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 1 # decrease screen brightness

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +1% #increase sound volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -1% #decrease sound volume
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle # mute sound

